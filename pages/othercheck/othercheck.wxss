.bgcimage image{
  width: 100%;
  height: 400rpx;
}

.bgctext{
  font-size: 70rpx;
  font-weight: 600;
  text-align: center;
  width: 100%;
  line-height: 400rpx;
  display: block;
}
.info{
  display: flex;
}
.info image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 25rpx;
  
}
.infoItem{
  display: flex;
  margin-left: auto;
  align-items: center;
  position: relative;
  top: -130rpx;

}
.infoItem text{
  color: white;
  font-weight: 550;
  margin-right: 30rpx;
}



.itemList{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  
}
.item{
  display: flex;
  align-items: center;
  flex: 1;
  margin-bottom: 20rpx;
}

.itemList text{
  width: 240rpx;
  overflow: hidden;
  margin-left: 20rpx;
}
.itemList .item .date{
  font-size: 20rpx;
  font-weight: 600;
  color: #ccc;
  

}
.itemList image{
  width: 210rpx;
  height: 210rpx;
}